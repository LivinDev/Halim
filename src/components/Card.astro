---
import { Image } from "astro:assets";

const { title, description, cardImage } = Astro.props;
---

<div class="card">
  <Image src={cardImage} alt={title} class="card-image" />
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
  </div>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    background-color: #fff;
    max-width: 500px;
  }

  .card-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .card-content {
    padding: 20px;
  }

  .card-title {
    margin: 0 0 10px 0;
    font-size: 1.5em;
    color: #333;
  }

  .card-description {
    margin: 0;
    color: #666;
  }

  @media (max-width: 768px) {
    .card {
      max-width: 100%;
      margin: 10px;
    }
  }
</style>
