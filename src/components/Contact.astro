---
const { title, description } = Astro.props;
---

<section id="contact">
  <div class="container">
    <h2>{title}</h2>
    <p>{description}</p>

    <div class="contact-info">
      <div class="contact-item">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="contact-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path
            d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
          ></path>
        </svg>
        <p><a href="tel:+911234567890">+91 12345 67890</a></p>
      </div>
    </div>
  </div>
</section>

<style>
  #contact {
    background-color: #f9f9f9;
    padding: 60px 0;
    text-align: center;
  }

  .container {
    width: 90%;
    max-width: 1200px;
    margin: auto;
    padding: 20px;
  }

  h2 {
    color: #0056b3;
    margin-bottom: 20px;
    font-size: 2.5em;
  }

  p {
    margin-bottom: 20px;
    font-size: 1.2em;
    color: #333;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .contact-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }

  .contact-icon {
    width: 24px;
    height: 24px;
    margin-right: 10px;
    color: #0056b3;
  }

  a {
    color: #0056b3;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #003d82;
  }

  @media (min-width: 768px) {
    .contact-info {
      flex-direction: row;
      justify-content: center;
    }

    .contact-item {
      margin: 0 20px;
    }
  }
</style>
