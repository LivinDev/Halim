---
import Layout from "../layouts/Layout.astro";
import EnglishVersion from "../components/EnglishVersion.astro";
import HindiVersion from "../components/HindiVersion.astro";
---

<Layout title="Halim">
  <!-- Toggle Button -->
  <button id="toggleButton">Switch to Hindi</button>

  <!-- Components to toggle -->
  <div id="englishContent">
    <EnglishVersion />
  </div>

  <div id="hindiContent" style="display: none;">
    <HindiVersion />
  </div>

  <!-- Client-side JavaScript to handle the toggle -->
  <script is:inline>
    const button = document.getElementById("toggleButton");
    const englishContent = document.getElementById("englishContent");
    const hindiContent = document.getElementById("hindiContent");

    // Initial state
    let isEnglish = true;

    button.addEventListener("click", () => {
      isEnglish = !isEnglish;

      // Toggle visibility
      if (isEnglish) {
        englishContent.style.display = "block";
        hindiContent.style.display = "none";
        button.textContent = "Switch to Hindi";
      } else {
        englishContent.style.display = "none";
        hindiContent.style.display = "block";
        button.textContent = "Switch to English";
      }
    });
  </script>

  <style>
    #toggleButton {
      position: absolute;
      top: 20px;
      right: 20px;
      padding: 10px 20px;
      background-color: #0056b3;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease;
      z-index: 100;
    }

    #toggleButton:hover {
      background-color: #003d82;
    }
  </style>
</Layout>
